<!--
 * mkscu:introGUI/GTK/C/FirstUI/builder.ui
 *
 * This file contains the XML markup for the GTK objects called in the C file
 * "myapp.c". Moving the UI properties to a separate file allows minor changes
 * to be made without having to recompile the program, among other benefits.
 *
 * Author:   Michael K Schumacher (Github, Bitbucket: mkschu)
 * Created:  02-Nov-2016
 * Modified: 03-Nov-2016
-->

<interface>
    <object id="window" class="GtkWindow">
        <property name="visible">True</property>
        <property name="title">My First GUI</property>
        <property name="default-width">800</property>
        <property name="default-height">600</property>
        <property name="border-width">10</property>

        <child>
            <object id="grid" class="GtkGrid">
                <property name="visible">True</property>

                <child>
                    <object id="button1" class="GtkButton">
                        <property name="visible">True</property>
                        <property name="label">Button 1</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">0</property>
                    </packing>
                </child>

                <child>
                    <object id="button2" class="GtkButton">
                        <property name="visible">True</property>
                        <property name="label">Button 2</property>
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">0</property>
                    </packing>
                </child>

                <child>
                    <object id="quit" class="GtkButton">
                        <property name="visible">True</property>
                        <property name="label">Quit</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">1</property>
                        <property name="width">2</property>
                    </packing>
                </child>
            </object>
        <packing>
        </packing>
        </child>
    </object>
</interface>
